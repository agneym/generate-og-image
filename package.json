{
	"name": "javascript-template-action",
	"version": "0.0.0",
	"private": true,
	"description": "JavaScript template action",
	"main": "dist/index.js",
	"scripts": {
		"typecheck": "bun --bun tsc --noEmit",
		"build": "bun build src/main.ts --outdir dist --target node",
		"build-release": "bun build src/main.ts --compile --outfile dist/index.js",
		"format": "biome format --write",
		"test": "bun test"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:BoyWithSilverWings/generate-og-image.git"
	},
	"keywords": [
		"actions",
		"node"
	],
	"author": "Agney <agney@outlook.in>",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.9.1",
		"@actions/github": "^1.1.0",
		"es-toolkit": "^1.39.10",
		"front-matter": "^3.0.2",
		"marked": "^4.0.10",
		"picomatch": "^3.0.1",
		"puppeteer-core": "^1.20.0",
		"twemoji": "^12.1.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/bun": "latest",
		"@types/marked": "^4.0.3",
		"@types/node": "^20.0.0",
		"@types/picomatch": "^2.3.0",
		"@types/puppeteer": "^1.19.1",
		"@types/puppeteer-core": "5.4.0",
		"lefthook": "^1.12.2",
		"typescript": "^5.0.4"
	}
}
